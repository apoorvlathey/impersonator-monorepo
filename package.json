{
  "name": "impersonator-monorepo",
  "description": "Monorepo for Impersonator",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "demos/*"
    ],
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**"
    ]
  },
  "scripts": {
    "build:provider": "yarn workspace @impersonator/provider build",
    "build:web3modal": "yarn workspace @impersonator/web3modal build",
    "start:web3modal-demo": "yarn workspace @impersonator/web3modal-demo start"
  }
}
